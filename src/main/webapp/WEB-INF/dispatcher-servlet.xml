<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <import resource="db-config.xml"/>

    <context:component-scan base-package = "com.company.store"/>

    <mvc:annotation-driven />

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    <bean id="userDAOImpl" class="com.company.store.model.impls.UserDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="productDAO" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="prodParamDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="paymentDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="orderProdDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="feedbackDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="deliveryDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="categoryAttrDAOImpl" class="com.company.store.model.impls.ProductDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <mvc:resources mapping="/resources/**" location="/resources/"/>

</beans>
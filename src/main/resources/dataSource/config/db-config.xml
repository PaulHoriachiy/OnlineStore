    <bean id="dataSource" class="oracle.ucp.jdbc.PoolDataSourceFactory" factory-method="getPoolDataSource">
        <property name="connectionFactoryClassName" value="${oracle.driver}"/>
        <property name="user" value="${oracle.user}"/>
